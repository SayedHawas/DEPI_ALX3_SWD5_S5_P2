@model MVCDemoLab.Models.Product
@{
    ViewData["Title"] = "Card";
}
<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100">
            <!-- Display the product photo -->
            @*  <img src="@Url.Content("~/images/products/" + Model.Photo)" class="card-img-top" alt="@Model.ProductName" /> *@
            <img src="@Url.Content("~/images/products/" + (Model.ImagePath == "" ? "default.png" : Model.ImagePath))" class="card-img-top" alt="@Model.Name" />
            <!-- Display product details -->
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">Price: $@Model.Price</p>
            </div>

            <!-- Add a button to view details -->
            <div class="card-footer">
                <a href="@Url.Action("Details", "Productsfull", new { id = Model.ProductId })" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
